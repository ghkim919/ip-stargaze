{
  "name": "ip-stargaze",
  "version": "0.1.0",
  "description": "Real-time IP traffic visualization with star graph",
  "type": "module",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "start:agent": "node src/agent/index.js",
    "dev": "node --watch src/server/index.js",
    "dev:agent": "node --watch src/agent/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/static": "^8.1.0",
    "@fastify/websocket": "^11.0.2",
    "cap": "^0.2.1",
    "fastify": "^5.2.1"
  },
  "devDependencies": {
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
